var gridCount = 0;
$("#selectByLoc_btn").click(function(){
        if (gridCount != 0) {
            $("#data_grid").data('kendoGrid').destroy();
        }
        gridCount++;
        var params = {
                "LocID" : $("#locid_inputer").val(),
                "BID" : $("#bid").val(),
                "LocFloor" : $("#bfloor").val()
                
        };


        $("#data_grid").kendoGrid({
          dataSource:{
            transport: {
                    read: {
                        method: "post",
                        url: "locationSelecter/searchByLoc",
                        dataType: "json",
                        data: params
                    }
                },
                schema: {
                    model: {
                        fields: {
                            LocID: { type: "int" },
                            LocName: { type: "string" },
                            BName: { type: "string" },
                            LocFloor: { type: "string" },
                            
                        }
                    }
                },
                pageSize: 20,
            },
          height:600,
          columns:[
                  {field:"LocID",title:"地點編號",width:"19%"},
                  {field:"BName",title:"館別",width:"19%"},
                  {field:"LocFloor",title:"樓層",width:"19%"},
                  {field:"Locname",title:"地點名稱",width:"19%"},
                  { command: { text: "廢除",click:deleteLoc}, title: " ", width: "5%" },

          ],
          sortable:true,
          scrollable: true,
                        sortable: true,
                        pageable: {
                            input: true,
                            numeric: false
                        },
  });
});

function deleteLoc(e) {
        e.preventDefault();
        var loc = this.dataItem($(e.currentTarget).closest("tr"));

        if (confirm("確定嗎??") == true) {
            $.ajax({
                type: "POST",
                url: "locationSelecter/DeleteLoc",
                data: { "LocID": loc.LocID },
                dataType: "json",
            }).done(function (e) {
                if (e == true) $("#data_grid").data("kendoGrid").dataSource.read();
            })

        } else 
        return false;
    }
