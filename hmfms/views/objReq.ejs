<script>
$(document).ready(function(){
    $("#data_grid").kendoGrid({
          dataSource:{
            transport: {
                    read: {
                        method: "post",
                        url: "searchByEq",
                        dataType: "json"
                    }
                },
                schema: {
                    model: {
                        fields: {
                            LocID: { type: "int" },
                            LocName: { type: "string" },
                            BName: { type: "string" },
                            LocFloor: { type: "string" },
                            
                        }
                    }
                },
                pageSize: 20,
            },
          height:600,
          columns:[
                  {field:"LocID",title:"地點編號",width:"19%"},
                  {field:"BName",title:"館別",width:"19%"},
                  {field:"LocFloor",title:"樓層",width:"19%"},
                  {field:"Locname",title:"地點名稱",width:"19%"}
          ],
          sortable:true,
          scrollable: true,
                        sortable: true,
                        pageable: {
                            input: true,
                            numeric: false
                        },
  });
});

</script>
